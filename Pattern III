import java.util.*;
public class Pattern3
{
    public static void main(String[] args)
    { Scanner sc=new Scanner(System.in);
    int n,i,j;
    n=sc.nextInt();
    for(i=0;i<n;i++)
    {
        for(j=0;j<=i;j++)
        {
            System.out.print("*");
        }
        System.out.println();
    }
    }
} 
