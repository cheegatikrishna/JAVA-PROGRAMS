import java.util.*;
public class Split
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int a,b,c;
        a=sc.nextInt();
        b=sc.nextInt();
        c=a/b;
        b=a%b;
        System.out.printf("The number of students in each team is %d and left out is %d",c,b);
    }
}
