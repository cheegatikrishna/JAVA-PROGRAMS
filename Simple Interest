import java.util.*;
public class Simple
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int p,t;
        p=sc.nextInt();
        t=sc.nextInt();
        float r,si;
        r=sc.nextFloat();
        si=p*t*r/100;
        System.out.printf("%.2f",si);
        //write your code
    }
}
