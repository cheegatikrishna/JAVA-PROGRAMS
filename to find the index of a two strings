import java.util.*;
import java.io.*;
import java.math.*;
class Solution {

    public static void main(String args[]) {
        Scanner in = new Scanner(System.in);
        String c = in.nextLine();
        String s = in.nextLine();int k=0;
        char v=c.charAt(0);
       for(int i=0;i<s.length();i++)
       {
        char ch=s.charAt(i);
        if(ch==v)
        k+=i;
       }System.out.println(k);
        
    }
}
