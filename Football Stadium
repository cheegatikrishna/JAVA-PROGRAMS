import java.util.*;
public class Football
{
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        int a,b,c,d;
        a=sc.nextInt();
        b=sc.nextInt();
        c=2*(a+b);
        d=a*b;
        System.out.println(c);
        System.out.println(d);
    }
}
